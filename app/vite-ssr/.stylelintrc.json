{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-rational-order",
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignore": [
          "custom-elements",
          "default-namespace"
        ]
      }
    ],
    "max-nesting-depth": 4,
    "no-descending-specificity": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "user-drag",
          "font-smooth"
        ]
      }
    ]
  }
}